#include <stdio.h>

int main()
{
	int num = 0;
	int Sum = 0;

	printf("Enter an integer (q to quit) : ");

	while (scanf("%d", &num) == 1)                 <-- 이러한 방법으로 num의 입력 값이 정수형이면 1 이지만, 아니라면 0 이라는 것을 활용하여 코드를 짤 수 있다.
	{
		Sum = Sum + num;

		printf("Enter next integer (q to quit) : ");
	}
	printf("Sum = %d", Sum);

	return 0;
}
