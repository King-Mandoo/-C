#include <stdio.h>
#define number 10       // define 을 활용하여 배열의 크기를 손 쉽게 변경 가능!
 
int main()
{
	int num[number];
	int sum = 0;
	printf("Enter 5 Numbers: ");

	for (int i = 0; i < number; i++)
	{
		scanf("%d", &num[i]);

		sum = sum + num[i];
	}
	printf("Sum = %d", sum);

	
	return 0;
}					

