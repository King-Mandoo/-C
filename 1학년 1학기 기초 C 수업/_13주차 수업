#include<stdio.h>

void dan(int num)
{
	int result;

	for (int i = 1; i < 10; i++)
	{
		result = num * i;
		printf("%2d X %2d = %2d\n", num, i, result);
	}
}

int main()
{
	int num;

	printf("ì¶œë ¥í•˜ê³  ì‹¶ì€ ë‹¨ì„ ì…ë ¥ : ");
	scanf("%d", &num);

	dan(num);

	return 0;
}



ì˜ˆì œ 28.  ë§ìŒâ­•  

#include<stdio.h>
#include<string.h>

void changer(char* p, int len)
{
	int a = 'a' - 'A';
	
	for (int i = 0; i < len; i++)
	{
		if (*(p + i) >= 'a' && *(p + i) <= 'z')
		{
			*(p + i) = *(p + i) - a;
		}
		else if (*(p + i) >= 'A' && *(p + i) <= 'Z')
		{
			*(p + i) = *(p + i) + a;
		}

		printf("%c", *(p + i));
	}
}

int main()
{
	int len;
	char aa[100];

	printf("ë¬¸ìì—´ì„ ì…ë ¥<100ì ì´ë‚´> : ");
	scanf("%s", aa);

	printf("ë³€í™˜ëœ ê²°ê³¼ ==> ");

	len = strlen(aa);
	changer(aa , len);

	return 0;
}

